<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%level [%thread] %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.hazelcast" level="warn"/>
    <logger name="com.hazelcast.cp.internal.MetadataRaftGroupManager" level="warn"/>
    <logger name="com.mchange" level="warn"/>
    <logger name="io.netty" level="warn"/>
    <logger name="io.vertx" level="warn"/>
    <logger name="JDBCEncoder" level="warn"/>
    <logger name="JDBCColumnDescriptor" level="warn"/>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>

